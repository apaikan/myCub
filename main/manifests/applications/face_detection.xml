<application>
    <name>FaceDetection</name>
    <description></description>
    <version>1.0</version>
    <authors>
        <author email="ali.paikan@iit.it">Ali Paikan</author>
    </authors>
    <module>
        <name>yarpview</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix>/marker</prefix>
    </module>
    <module>
        <name>faceDetector</name>
        <parameters>--context faceDetector --cascade haarcascade_frontalface_alt.xml</parameters>
        <node>raspberry</node>
        <workdir>/home/pi/install/myCub/main/components/faceDetector/build</workdir>
    </module>

    <module>
        <name>lookAround.lua</name>
        <parameters></parameters>
        <node>raspberry</node>
        <workdir>/home/pi/install/myCub/main/components/lookAround</workdir>
        <deployer>lua</deployer>
    </module>


    <connection>
        <from>/grabber</from>
        <to>/faceDetector/image:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/faceDetector/image:o</from>
        <to>/marker/yarpview/img:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/faceDetector/target</from>
        <to>/GazeControl/cmd:i</to>
        <protocol>tcp+recv.portmonitor+context.face_tracker+file.pm_face</protocol>
    </connection>
    <connection>
        <from>/lookAround/target</from>
        <to>/GazeControl/cmd:i</to>
        <protocol>tcp+recv.portmonitor+context.face_tracker+file.pm_look</protocol>
    </connection>


</application>
